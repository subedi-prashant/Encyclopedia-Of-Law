@model Encyclopedia_Of_Laws.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Account";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath);
}

<style>
    .input-icons i {
        position: absolute;
        color: white;
        padding: 7px 7px;
    }

    .input-icons {
        width: 100%;
        margin-bottom: 10px;
    }

    .icon {
        padding: 10px;
        min-width: 50px;
        text-align: center;
    }

    input#file {
        width: 30px;
        padding: 30px 0 0 0;
        height: 20px;
        overflow: hidden;
        box-sizing: border-box;
    }
</style>


<div class="profile-edit pt-3" id="profile-Account">

    <!-- Profile Edit Form -->
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
            <div class="col-md-8 col-lg-9">

                @if (Model.ExistingPhotoPath != null)
                {
                    <img id="profilePicture" alt="profile" class="profile-picture" src="~/images/@Model.ExistingPhotoPath" />
                }
                else
                {
                    <img id="profilePicture" alt="profile" class="profile-picture" src="~/images/user-male.jpg" />
                }
                <div class="pt-2">
                    <div class="custom-file">
                        <input asp-for="ProfilePicture" class="form-control custom-file-input"
                               type="file"
                               accept="image/*"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])">
                    </div>
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Email" class="control-label col-md-4 col-lg-3 col-form-label">Email</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="UserName" class="control-label col-md-4 col-lg-3 col-form-label">UserName</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="FirstName" class="control-label col-md-4 col-lg-3 col-form-label">FirstName</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="LastName" class="control-label col-md-4 col-lg-3 col-form-label">LastName</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        @if (!User.IsInRole("Admin") || !User.IsInRole("Staff"))
        {

            <div class="row mb-3">
                <label asp-for="Country" class="control-label col-md-4 col-lg-3 col-form-label">Country</label>
                <div class="col-md-8 col-lg-9">
                    <input asp-for="Country" class="form-control" />
                </div>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <label asp-for="City" class="control-label col-md-4 col-lg-3 col-form-label">City</label>
                <div class="col-md-8 col-lg-9">
                    <input asp-for="City" class="form-control" />
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <label asp-for="Address" class="control-label col-md-4 col-lg-3 col-form-label">Address</label>
                <div class="col-md-8 col-lg-9">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        }


        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Save Changes</button>
        </div>
    </form><!-- End Profile Edit Form -->

</div>