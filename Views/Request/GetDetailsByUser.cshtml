@model Encyclopedia_Of_Laws.Models.Request

@{
    ViewData["Title"] = "GetDetailsByUser";
}


<div class="modal fade" id="verticalycentered Details" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>


            <div class="modal-body">
                <dl class="row" id="Details">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RequestDate)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.RequestDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Subject)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Subject)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Message)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RequestStatus)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.RequestStatus)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.AssignedDate)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.AssignedDate)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Lawyer)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Lawyer.FirstName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.User.FirstName)
                    </dd>
                </dl>

            </div>

            <div class="modal-footer text-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div><!-- End Vertically centered Modal-->

