@model UserIssue


<div class="col-lg-8">
    <form asp-action="SendIssue" asp-controller="Administration" method="post" class="row g-3 needs-validation">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Status" type="hidden" />

        <div class="row" style=" padding: 7px;">
            <div class="col-md-6 form-group">
                <input asp-for="Name" type="text" name="name" class="form-control" id="name" placeholder="Your Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group" style=" padding: 0px 0px 7px 0px;">
                <input asp-for="Email" type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <input asp-for="Subject" type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-grou">
            <textarea asp-for="Message" class="form-control" name="message" placeholder="Message" style="height: 348px;" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="text-center"><button class="btn btn-primary" type="submit">Send Message</button></div>
    </form>
</div><!-- End Contact Form -->




